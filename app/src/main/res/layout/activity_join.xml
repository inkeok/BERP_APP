<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.JoinActivity"
    android:orientation="vertical">

    <TextView
        android:layout_toEndOf="@id/txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@drawable/emp_top_background_round"
        android:text="회원가입"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        android:textColor="#222E3C"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 이름을 입력하세요"
        android:layout_marginBottom="5dp"
        android:textColor="#8C8A8A"/>

    <EditText
        android:id="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="@drawable/rond_txt"
        android:hint="name"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 성별을 체크하세요"
        android:layout_marginBottom="5dp"
        android:textColor="#8C8A8A"/>

    <RadioGroup
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <RadioButton
            android:id="@+id/rdb_man"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:text="남"
            />


        <RadioButton
            android:id="@+id/rdb_woman"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginHorizontal="10dp"
            android:text="여"/>

    </RadioGroup>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 아이디를 입력하세요"
        android:layout_marginBottom="5dp"
        android:textColor="#8C8A8A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rond_txt"
            android:hint="id"
            android:paddingLeft="20dp"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_id_check"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/common_search"
            android:gravity="center"
            android:text="중복확인"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 비밀번호를 입력하세요"
        android:layout_marginBottom="5dp"
        android:textColor="#8C8A8A"/>

    <EditText
        android:id="@+id/password"
        android:layout_marginLeft="20dp"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="@drawable/rond_txt"
        android:hint="password"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 이메일를 입력하세요"
        android:layout_marginBottom="5dp"
        android:textColor="#8C8A8A"/>

    <EditText
        android:id="@+id/email"
        android:layout_marginLeft="20dp"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="@drawable/rond_txt"
        android:hint="xxxx@naver.com"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="핸드폰 번호를 입력하세요"
        android:layout_marginBottom="5dp"
        android:textColor="#8C8A8A"/>

    <EditText
        android:id="@+id/phone"
        android:layout_marginLeft="20dp"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="@drawable/rond_txt"
        android:hint="010-1234-5678"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소를 입력하세요"
        android:layout_marginBottom="5dp"
        android:textColor="#8C8A8A"/>

    <EditText
        android:id="@+id/addr"
        android:layout_marginLeft="20dp"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:background="@drawable/rond_txt"
        android:hint="ex)광주광역시 광산구"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_join"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/common_search"
        android:textColor="@color/white"
        android:text="회원가입"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"/>


</LinearLayout>