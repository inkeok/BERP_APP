<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lin_notice_list">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view"/>
    <androidx.cardview.widget.CardView

        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true">

        <View
            android:id="@+id/view_myApply_check"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/green" />
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지사항 제목"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/notice_writer"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작성자"
                android:textColor="@color/black"
                android:maxLength="25"
                android:textSize="18dp"
                />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성 날짜"/>
                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"/>
                <TextView
                    android:id="@+id/notice_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022/11/17"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_rec_employee_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회수"/>
                <View
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view"/>
                <TextView
                    android:id="@+id/notice_readCnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회수 1 "/>


            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>