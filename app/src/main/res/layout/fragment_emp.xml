<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".emp.EmpFragment"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/app_backgroung"
        android:scaleType="fitXY"
        android:alpha="0.5"/>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_toEndOf="@id/txt"
        android:background="@drawable/menu_back_gradient2"
        android:paddingLeft="10dp"
        android:text="직원관리"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/linear_Empsearch"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <AutoCompleteTextView
            android:id="@+id/emp_item_filled_exposed"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:inputType="none"
            android:textSize="15dp"
            android:text="부서선택" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/linear_Empsearch"
        >

        <AutoCompleteTextView
            android:id="@+id/emp_item_filled_exposed2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp"
            android:inputType="none"
            android:textSize="15dp"
            android:text="세부선택" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

