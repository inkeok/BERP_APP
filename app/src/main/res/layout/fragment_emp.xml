    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/app_background"
        android:scaleType="fitXY"/>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
