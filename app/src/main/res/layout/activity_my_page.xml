<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MyPageActivity"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/my_page_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사원이름 "
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호변경"

            />
        <EditText
            android:id="@+id/my_page_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="변경할 비밀번호"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/my_page_pw_ck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="비밀번호 재입력"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="휴대폰번호 변경"
            />
        <EditText
            android:id="@+id/my_page_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="휴대폰번호 변경"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일 변경"
            />
        <EditText
            android:id="@+id/my_page_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일 변경"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/my_page_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:layout_marginRight="30dp"
            />
        <Button
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:id="@+id/my_page_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"/>
    </LinearLayout>





</LinearLayout>